{% for block in section.blocks %}
  <div class="py-0 " style="background-color: {{ block.settings.bg_color }}; color: {{ block.settings.text_color }}">
    {{ block.settings.text }}
  </div>
{% endfor %}



{% schema %}
  {
    "name": "Announcement Bar",
    "max_blocks": 12,
    "settings": [
  
    ],
    "blocks": [
      {
        "type": "announcement",
        "name": "t:sections.announcement-bar.blocks.announcement.name",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "color",
            "id": "text_color",
            "label": "Color",
            "default": "#121212"
          }, {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#FFFFFF"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.announcement-bar.presets.name",
        "blocks": [
          {
            "type": "announcement"
          }
        ]
      }
    ]
  }
{% endschema %}